# Environment Configuration for Boujee Events Platform

# Application Environment
NODE_ENV=development
VITE_APP_ENV=development
VITE_APP_NAME="Boujee Events"
VITE_APP_URL=http://localhost:5173

# Database Configuration
# Production: PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/boujee_events
# Development: SQLite
DATABASE_URL_DEV=sqlite:./data/boujee_events.db

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-this

# Payment Integration
# Stripe
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Barion (Hungarian Payment Gateway)
VITE_BARION_PUBLIC_KEY=your_barion_public_key
BARION_SECRET_KEY=your_barion_secret_key

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
VITE_FROM_EMAIL=noreply@boujeeevents.com
VITE_ADMIN_EMAIL=admin@boujeeevents.com

# Google Drive Integration
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret
GOOGLE_DRIVE_REFRESH_TOKEN=your_refresh_token
GOOGLE_DRIVE_FOLDER_ID=your_folder_id

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp,application/pdf

# Analytics & Monitoring
VITE_ANALYTICS_ENABLED=true
LOG_LEVEL=info

# Social Media Integration (Optional)
FACEBOOK_APP_ID=your_facebook_app_id
INSTAGRAM_ACCESS_TOKEN=your_instagram_token
TWITTER_API_KEY=your_twitter_api_key