# Boujee Events Environment Configuration

# Application Mode
# Set to 'true' for local development with mock data
# Set to 'false' for production with real API
VITE_LOCAL_MODE=true

# API Configuration (for production)
VITE_API_URL=

# Database Configuration
# For production PostgreSQL
DATABASE_URL=

# JWT Configuration
JWT_SECRET=boujee-events-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Payment Configuration
# Stripe
STRIPE_SECRET_KEY=
STRIPE_PUBLIC_KEY=
STRIPE_WEBHOOK_SECRET=

# PayPal
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_ENVIRONMENT=sandbox

# Email Configuration
# Resend
RESEND_API_KEY=

# Google Drive Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# File Upload Configuration
MAX_FILE_SIZE=10485760
WATERMARK_TEXT=BOUJEE EVENTS

# Security Configuration
CORS_ORIGIN=http://localhost:5173

# Development Configuration
NODE_ENV=development